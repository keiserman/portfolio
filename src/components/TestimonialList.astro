---
const testimonials = await Astro.glob("../content/testimonials/*.md");
---

<div class="grid md:grid-cols-2 gap-6">
  {
    testimonials.map((testimonial) => (
      <div class="flex flex-col gap-6 border border-zinc-200 dark:border-zinc-800 px-8 py-10 rounded-xl">
        <p class="text-base text-zinc-600 dark:text-zinc-400">
          {testimonial.frontmatter.text}
        </p>
        <div class="text-xl">{testimonial.frontmatter.name}</div>
      </div>
    ))
  }
</div>
