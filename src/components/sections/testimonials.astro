---
import { Icon } from "astro-icon/components";

const testimonials = await Astro.glob("../../content/testimonials/*.md");
---

<section class="section bg-zinc-950 text-white">
  <div class="padding-global">
    <div class="container">
      <div class="px-8 py-8 bg-zinc-900 rounded-xl flex flex-col gap-8">
        <h2>
          Don't just take my word for itâ€”here's what my clients have to say
          about working with me.
        </h2>
        <div class="grid md:grid-cols-2 gap-6">
          {
            testimonials.map((testimonial) => (
              <div class="flex flex-col gap-6 border border-zinc-800 dark:border-zinc-800 px-6 py-8 md:px-8 md:py-10 rounded-xl">
                <Icon name="ph:quotes" class="icon" />
                <p class="text-base text-zinc-400">
                  {testimonial.frontmatter.text}
                </p>
                <div class="text-xl">{testimonial.frontmatter.name}</div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
