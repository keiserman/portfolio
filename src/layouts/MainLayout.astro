---
import Header from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/dm-sans";
import "@fontsource/dm-mono";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kevin Eiserman - Portfolio</title>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  body {
    @apply bg-white text-neutral-950 dark:bg-neutral-950 dark:text-white;
  }

  h1 {
    @apply text-4xl md:text-5xl lg:text-6xl font-medium;
  }

  h2 {
    @apply text-3xl md:text-4xl lg:text-5xl font-medium;
  }

  h3 {
    @apply text-2xl md:text-3xl lg:text-4xl;
  }

  .padding-global {
    @apply md:px-6 px-4;
  }

  .container {
    @apply max-w-screen-xl m-auto;
  }

  .section {
    @apply md:py-32 py-14;
  }

  .navbar-link {
    @apply text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white;
  }

  .card {
    @apply px-6 py-8 rounded-xl bg-gradient-to-b 
    from-neutral-50 to-white border-neutral-200 dark:from-neutral-950 dark:to-neutral-900 border dark:border-neutral-800;
  }

  .icon {
    @apply size-10 p-2 bg-neutral-200 dark:text-neutral-300 dark:bg-neutral-800 rounded-md;
  }

  input {
    @apply px-1 py-2 bg-transparent border border-neutral-700 rounded-lg;
  }
</style>
